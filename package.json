{
  "name": "duckdb-terminal-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist packages/website/.vite",
    "dev": "npm run dev -w @duckdb-terminal/website",
    "build": "npm run build -w duckdb-terminal && npm run build -w @duckdb-terminal/website",
    "build:lib": "npm run build -w duckdb-terminal",
    "build:website": "npm run build -w @duckdb-terminal/website",
    "test": "npm run test -w duckdb-terminal",
    "test:ui": "npm run test:ui -w duckdb-terminal",
    "test:coverage": "npm run test:coverage -w duckdb-terminal",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "generate-docs": "npm run generate-docs -w duckdb-terminal",
    "deploy": "npm run build:website && wrangler pages deploy packages/website/dist"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
